<DMSkin:DMSkinWindow x:Class="DMSkin.WPF.DEMO.Windows.ImageWindow"
        xmlns:DMSkin="clr-namespace:DMSkin.WPF;assembly=DMSkin.WPF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"  
        Title="MainWindow" 
                     
                     BorderThickness="20"
                     
Foreground="White"    
DMShowMin="True"       
DMShowMax="True"       
DMShowClose="True"     
DMWindowShadowSize="30" 
DMWindowShadowColor="#FF000000" 
DMSystemButtonSize="50" 
DMSystemButtonForeground="#FFFFFFFF" 
DMSystemButtonHoverColor="#77333333" 
DMSystemButtonShadowEffect="0"  
ResizeMode="CanResize" 
Height="600" Width="1000"  
MinHeight="268" MinWidth="360" 
WindowStartupLocation="CenterScreen">
    <Window.Effect>
        <DropShadowEffect BlurRadius="15" Opacity="1" ShadowDepth="1"/>
    </Window.Effect>
    <Border BorderThickness="0">
        <Border.Background>
            <ImageBrush ImageSource="/DMSkin.WPF.DEMO;component/Images/BG.jpg"/>
        </Border.Background>
        <Grid>
            <ResizeGrip HorizontalAlignment="Right" VerticalAlignment="Bottom"></ResizeGrip>
        </Grid>
    </Border>
    </DMSkin:DMSkinWindow>
